<%= render partial: "layouts/site_shared/banner", locals: {logo: "Entre na sua conta"}%>

<div class="container pb50  pt50-md">
  <div class="row">
    <div class="col-md-6 col-lg-5 mr-auto ml-auto">
      <div class="card card-account">
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
	      <%= f.label :email %><br />
	      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder:"Digite seu email" %>
            </div>
            <div class="form-group">
	      <%= f.label :password %><br />
	      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Digite sua senha" %>
            </div>
	    <% if devise_mapping.rememberable? -%>
	      <div class="field">
		<%= f.check_box :remember_me %>
		<%= f.label :remember_me %>
	      </div>
	    <% end -%>
	    <%= f.submit "Log in", class: "btn btn-block btn-secondary btn-rounded"%>
	  <% end%>
          <br>
          <p class="mb0 text-small">Dont' have an account? <a href="#" class="btn btn-underline">Sign Up</a></p>
          <p class=" text-small mb0">Forget your password? <a href="#" class="btn btn-underline">Recover</a></p>
          <hr>
        </div>
      </div>
    </div>
  </div>
</div>
