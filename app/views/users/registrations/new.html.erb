<%= render partial: "layouts/site_shared/banner", locals: {logo: "Cadastre um usuário"}%>

<div class="container pb50 pt50-md">
  <div class="row">
    <div class="col-md-6 col-lg-5 mr-auto ml-auto">
      <div class="card card-account">
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="form-group">
	          <%= f.label :name %>
	          <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Digite seu nome"%>
            </div>
            <div class="form-group">
	          <%= f.label :email%>
	          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Digite seu email"%>
            </div>
            <div class="form-group">
	          <%= f.label :password %>
	          <% if @minimum_password_length %>
		        <em>(<%= @minimum_password_length %> caractéres no mínimo)</em>
	          <% end %><br />
	          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Digite sua senha" %>
            </div>
            <div class="form-group">
	          <%= f.label :password_confirmation %><br />
	          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Digite novamente sua senha" %>
            </div>
	        <%= f.submit "Sign up", class: "btn btn-block btn-secondary btn-rounded btn-xl" %>
	      <% end %>
          <br>
          <p class="mb0 text-small">Dont' have an account? <a href="#" class="btn btn-underline">Sign Up</a></p>
          <p class=" text-small mb0">Forget your password? <a href="#" class="btn btn-underline">Recover</a></p>
          <hr>
        </div>
      </div>
    </div>
  </div>
</div>

<% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |message| %>
        <%= javascript_tag do %>
            $.notify({
                message: '<%= message %>'
            },{
                type: 'danger',
                placement: {
                    from: "top",
                    align: "left"
                    },
                delay: 5000
            })
        <% end %>
    <% end %>
<% end %>
