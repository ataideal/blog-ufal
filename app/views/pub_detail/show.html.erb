<%= render partial: "layouts/site_shared/banner", locals: {logo: "Detalhes da publicação"} %>

<div class="container pt90 pb60">
  <div class="row">
    <div class="col-md-9 mb30">
      <div class="post-full">
        <div class="blog-meta">
          <h2><%= @pub.title %></h2>
          <ul class="list-inline">
            <%= link_to "#" do %>
              <li class="list-inline-item"><i class="fa fa-user"></i><%= "#{@pub.user.name}" %></li>
            <% end %>
            <li class="list-inline-item"><i class="fa fa-calendar-check-o"></i><%=@pub.created_at %></li>
            <li class="list-inline-item"><i class="fa fa-tag"></i> <a href="#" class="btn btn-underline">Startups</a>
            </li>
          </ul>
        </div><!--post meta end-->
        <div class="post-thumbnail">
          <img src="images/blog1.jpg" alt="" class="img-fluid">
        </div>
        <div class="post-content">
          <%= raw @pub.content %>
          <ul class="list-inline share">
            <li class="list-inline-item">Compartilhe com:</li>
            <li class="list-inline-item">
              <%= link_to "https://www.facebook.com/sharer/sharer.php?u=#{request.original_url}", { :class => 'btn btn-underline', 'data-toggle' => 'tooltip', :title => '', 'data-original-title' => 'Facebook', :target => '_blank' } do %>
                <i class="fa fa-facebook"></i> Facebook
              <% end %>
            </li>
            <li class="list-inline-item">
              <%= link_to "http://twitter.com/home?status=#{request.original_url}", { :class => 'btn btn-underline', 'data-toggle' => 'tooltip', :title => '', 'data-original-title' => 'Twitter', :target => '_blank' } do %>
                <i class="fa fa-twitter"></i> Twitter
              <% end %>
          </ul>
        </div>
      </div><!--post end--> 
      <hr class="mb30">
      <h4 class="font600 h5 mb30">Publicações recomendadas</h4>
      <%if @recommended.empty? %>
        <div>Nenhuma publicação recomendada</div>
      <%else%>
        <div class="row">
            <% @recommended.each do |pub| %>
              <div class="col-lg-4 mb20">
                <div class="card mb20 card-post">
                  <%= link_to pub_detail_path(pub) do %>
                    <%= image_tag('box/img-8.jpg', :class => 'img-fluid', :alt => "...") %>
                  <% end %>
                  <div class="card-body">
                    <%= link_to pub_detail_path(pub) do %>
                      <h4 class="card-title font400"><%=  pub.title %></h4>
                    <% end %>
                    
                    <!--<p class="card-text"><%= pub.description %></p>-->
                    <%= link_to pub_detail_path(pub), :class => 'font600 btn btn-underline' do %>
                      Read more<i class="fa fa-angle-right"></i>
                    <% end %>
                    <!--<a class="font600 btn btn-underline" href="<%= pub_detail_path(pub) %>">Read more <i class="fa fa-angle-right"></i></a>-->
                      
                  </div>
                  <div class="card-bottom">
                    <ul class="list-inline">
                      <li class="list-inline-item"><a href="#"><i class="fa fa-reply"></i> 7 </a></li>
                      <li class="list-inline-item"><a href="#"><i class="fa fa-comments"></i> 14</a></li>
                      <li class="list-inline-item"><a href="#"><i class="fa fa-share-alt"></i></a></li>
                    </ul>
                  </div>
                </div><!--card-->
              </div>
            <% end %>
        </div><!--end recommendations-->
